<UserControl x:Class="Boss.az.wpf.Views.SignInUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Boss.az.wpf.Views"
             xmlns:local1="clr-namespace:Boss.az.wpf.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="YellowGreen" >
    <Grid>        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0">
            <Button Content="Sign In" Background="DodgerBlue" Foreground="Black" Command="{Binding SignInButton}" Width="100" Height="40" BorderBrush="Black" />
            <Button Content="Sign Up" Background="DodgerBlue" Foreground="Black" Command="{Binding SignUpButton}" Width="100" Height="40"  BorderBrush="Black"/>
        </StackPanel>

        <ContentControl Grid.Row="1" x:Name="SignInUpHolderControl" Content="{Binding SignInUpHolderControlPro}"/>
    </Grid>
</UserControl>
